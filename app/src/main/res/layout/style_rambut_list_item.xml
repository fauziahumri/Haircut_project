<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/style_list_image"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/style_list_wrap"

        android:layout_marginStart="10dp"
        android:layout_marginEnd="30dp"
        android:layout_marginTop="8dp"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/style_list_image"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/style_list_nama"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:text="Nama Style"
            android:textSize="18dp"
            android:textStyle="bold"

            android:fontFamily="sans-serif-medium"
            />

        <TextView
            android:id="@+id/style_list_harga"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="harga"
            android:layout_marginTop="4dp"
            />

    </LinearLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_margin="5dp"
        app:layout_constraintStart_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/style_list_image"
        android:background="@color/black"/>

</androidx.constraintlayout.widget.ConstraintLayout>